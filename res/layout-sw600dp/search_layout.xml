<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:background="@color/back_ground"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical" >

    <Button
        android:id="@+id/dialog_btn_bak"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="30dp"
        android:background="@null"
        android:drawablePadding="10dp"
        android:drawableRight="@drawable/cross"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:minHeight="0dip"
        android:minWidth="0dip"
        android:padding="21dp"
        android:textAllCaps="false"
        android:textColor="@color/headers_txt_title"
        android:textSize="@dimen/button_height1" />

    <EditText
        android:id="@+id/search_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dialog_btn_bak"
        android:layout_marginBottom="25dp"
        android:layout_marginLeft="6dp"
        android:layout_marginRight="6dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/input_bgs"
        android:hint="@string/search"
        android:imeOptions="actionSearch"
        android:inputType="textCapSentences"
        android:maxLines="3"
        android:padding="15dp"
        android:singleLine="true"
        android:textSize="@dimen/tab_small_size" />

<Button
    android:id="@+id/search_Btn"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentRight="true"
    android:layout_below="@+id/dialog_btn_bak"
    android:layout_centerHorizontal="false"
    android:layout_marginRight="9dp"
    android:layout_marginTop="7dp"
    android:background="@drawable/green_border"
    android:padding="8dp"
    android:visibility="gone"
    android:text="Search"
    android:textColor="@color/white"
    android:textSize="@dimen/button_height1"
    android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/liner"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/search_txt"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="5dp"
        android:background="@color/back_ground"
        android:orientation="horizontal"
        android:visibility="gone" >

        <TextView
            android:id="@+id/txt_pr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="price range :"
            android:textColor="#000000"
            android:textSize="@dimen/medium_size" />

        <TextView
            android:id="@+id/txt_prval"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="@string/price_range"
            android:textColor="#0e46a5"
            android:textSize="@dimen/medium_size" />
    </LinearLayout>
<TextView
            android:id="@+id/txt_sort_by_pis"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="21dp"
             android:layout_below="@+id/search_txt"
            android:paddingTop="5dp"
            android:text="@string/sort_by_points"
            android:textSize="@dimen/tab_medium_size" />
    <TextView
        android:id="@+id/txt_sorts"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/search_txt"
        android:layout_centerHorizontal="false"
        android:layout_centerVertical="false"
        android:layout_marginLeft="10dp"
         android:drawableRight="@drawable/category_menu_icon_down"
        android:layout_marginRight="10dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/rect_grey"
        android:gravity="center"
        android:padding="15dp"
        android:layout_alignParentRight="true"
        android:text="High to Low"
        android:textColor="#195ca3"
        android:textSize="@dimen/tab_small_size" />
<RelativeLayout
    android:id="@+id/lay_ran3"
    android:layout_width="180dp"
    android:layout_height="wrap_content"
    android:layout_alignParentRight="true"
    android:layout_below="@+id/txt_sorts"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
  
    android:gravity="center_vertical"
    android:orientation="horizontal" >

        <LinearLayout
        android:id="@+id/id_sort"
         android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
          android:background="@color/bottom_border"
        android:visibility="gone"
        android:padding="10dp" >
<RelativeLayout
            android:id="@+id/rel_high_to_low"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
           
            android:gravity="center_vertical"
            android:visibility="visible" >

            <TextView
                android:id="@+id/txt_high_to_low"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:drawablePadding="10dp"
                android:padding="15dp"
                android:singleLine="true"
                android:text="High to Low"
                android:textColor="@color/white"
                android:textSize="@dimen/tab_medium_size"
                 />
        </RelativeLayout>
<View
            android:id="@+id/view_id11"
            android:layout_width="fill_parent"
            android:layout_height="0.2dp"
            android:background="@color/white" />
        <RelativeLayout
            android:id="@+id/rel_low_to_high"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
           
            android:gravity="center_vertical"
            android:visibility="visible" >

            <TextView
                android:id="@+id/txt_low_to_high"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:drawablePadding="10dp"
                android:padding="15dp"
                android:singleLine="true"
                android:text="Low to High"
                android:textColor="@color/white"
                android:textSize="@dimen/tab_medium_size"
                 />
        </RelativeLayout>

     
    </LinearLayout>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/lay_ran"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lay_ran3"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="55dp"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/txt_from"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:paddingBottom="10dp"
            android:paddingLeft="10dp"
            android:paddingTop="12dp"
            android:text="@string/from"
            android:textColor="#0e46a5"
            android:textSize="@dimen/tab_small_size" />

        <EditText
            android:id="@+id/edit_from"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="10dp"
            android:layout_toRightOf="@+id/txt_from"
            android:background="@drawable/rect_blue"
            android:maxLines="1"
            android:numeric="integer"
            android:padding="15dp"
            android:paddingLeft="5dp"
            android:singleLine="true"
            android:text="5"
            android:textColor="#0e46a5"
           android:textSize="@dimen/tab_small_size"/>

        <TextView
            android:id="@+id/txt_to"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_toRightOf="@+id/edit_from"
            android:padding="10dp"
            android:text="@string/to"
            android:textColor="#0e46a5"
            android:textSize="@dimen/tab_small_size" />

        <EditText
            android:id="@+id/edit_to"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/txt_to"
            android:background="@drawable/rect_blue"
            android:maxLines="1"
            android:numeric="integer"
            android:padding="15dp"
            android:singleLine="true"
            android:text="3006"
            android:textColor="#0e46a5"
            android:textSize="@dimen/tab_small_size" />

        <TextView
            android:id="@+id/txt_go"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/edit_to"
            android:layout_marginLeft="36dp"
            android:background="@color/sign_txt"
            android:gravity="right|center"
            android:paddingBottom="15dp"
            android:paddingLeft="19dp"
            android:paddingRight="19dp"
            android:paddingTop="15dp"
            android:text="@string/go"
            android:textColor="#ffffff"
            android:textSize="@dimen/tab_small_size" />
    </RelativeLayout>

</RelativeLayout>
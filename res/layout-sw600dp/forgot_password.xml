<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
     android:background="@color/back_ground"
     android:focusable="true"
        android:focusableInTouchMode="true"
    android:orientation="vertical" xmlns:android="http://schemas.android.com/apk/res/android">
    <Button
            android:id="@+id/btn_back"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/down_arrow"
            android:background="@null"
            android:drawablePadding="10dp"
            android:gravity="left|center_vertical"
            android:minHeight="0dip"
            android:padding="21dp"
            android:textAllCaps="false"
            android:paddingLeft="10dp"
            android:focusable="true"
        android:focusableInTouchMode="true"
            android:text="@string/forgot_pwd"
            android:textColor="@color/headers_txt_title"
            android:textSize="@dimen/tab_medium_size" />
    
   <!--  <Button
            android:id="@+id/btn_back"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:drawableLeft="@drawable/down_arrow"
            android:background="@null"
            android:drawablePadding="10dp"
            android:gravity="left|center_vertical"
            android:minHeight="0dip"
            android:textAllCaps="false"
            android:minWidth="0dip"
            android:paddingLeft="10dp"
            android:text="@string/forgot_pwd"
            android:textColor="@color/headers_txt_title"
            android:textSize="@dimen/button_height1" /> -->
    <View
              
              android:id="@+id/lin"  android:layout_width="fill_parent"
                  android:layout_below="@+id/btn_back"
                android:layout_height="1dp"
                 android:layout_marginTop="5dp"
                android:background="@color/line" />
<EditText
                        android:id="@+id/user_txt"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginRight="6dp"
                        android:layout_marginLeft="6dp"
                        android:layout_below="@+id/lin"
                        android:layout_marginTop="15dp"
                        android:background="@drawable/input_bgs"
                        android:hint="@string/username"
                        android:inputType="textCapSentences"
                        android:paddingLeft="10dp"
                        android:visibility="gone"
                        android:imeOptions="actionNext"
                         android:textColor="@color/input_box_hint"
                        android:maxLines="3"
                        android:textSize="@dimen/medium_size" >
                    </EditText>

                    <EditText
                        android:id="@+id/email_txt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:background="@drawable/input_bgs"
                        android:hint="@string/emailid"
                        android:layout_margin="10dp"
                        android:imeOptions="actionDone"
                        android:inputType="textCapSentences"
                        android:maxLines="1"
                        android:padding="20dp"
                        android:singleLine="true"
                        android:textColor="@color/input_box_hint"
                        android:textSize="@dimen/tab_medium_size" >

                    </EditText>
                    <EditText
                        android:id="@+id/mob_txt"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                         android:visibility="gone"
                        android:layout_marginRight="6dp"
                        android:layout_marginLeft="6dp"
                         android:textColor="@color/input_box_hint"
                        android:layout_below="@+id/email_txt"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/input_bgs"
                        android:hint="@string/mobilenumber"
                        android:imeOptions="actionDone"
                        android:paddingLeft="10dp"
                         android:inputType="phone"
                            android:maxLength="10"
                        android:textSize="@dimen/medium_size" >
                    </EditText>
                    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/email_txt"
         android:layout_marginTop="65dp"
        android:id="@+id/rrr"
        android:background="@color/sign_txt"
        >

        <TextView
            android:id="@+id/submit_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="false"
            android:layout_centerHorizontal="false"
            android:layout_centerInParent="true"
            android:textSize="@dimen/tab_medium_size"
            android:layout_centerVertical="false"
            android:gravity="center"
            android:paddingTop="15dp"
             android:paddingBottom="15dp"
              android:paddingLeft="90dp"
               android:paddingRight="90dp"
            android:text="@string/submit"
            android:textColor="@color/white" />

        

    </RelativeLayout>
</RelativeLayout>

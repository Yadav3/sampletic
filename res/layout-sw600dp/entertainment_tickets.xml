<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/back_ground"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/lay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="visible"
        android:orientation="vertical" >

        <include layout="@layout/header" />
    </LinearLayout>

    <View
        android:id="@+id/lin"
        android:layout_width="fill_parent"
        android:layout_height="0.1dp"
        android:layout_below="@+id/lay"
        android:layout_marginTop="5dp"
        android:background="@color/line"
        android:visibility="gone" />

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lay"
        android:background="@color/back_ground"
        android:focusable="true"
        android:focusableInTouchMode="true" >

        <LinearLayout
            android:id="@+id/rrr_scr"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginBottom="23dp"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="6dp"
            android:background="@color/back_ground"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:orientation="vertical" >
            
             <TextView
           android:id="@+id/entertainment_dec_txt"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|center_horizontal"
             android:layout_marginTop="6dp"
             android:text="@string/entertainment_dec"
            android:textColor="@color/decription"
            android:textSize="@dimen/large_size" />
            <View
        android:id="@+id/lin"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/btn_home"
        android:layout_marginTop="10dp"
        android:visibility="gone"
        android:background="@color/line" />
            <TextView
           android:id="@+id/entertainment_dec_txt1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|center_horizontal"
            android:layout_marginTop="6dp"
             android:lineSpacingExtra="10dp"
            android:text="@string/entertainment_dec1"
            android:textSize="@dimen/tab_medium_size" />
<EditText
                android:id="@+id/nam_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="6dp"
                android:background="@drawable/input_bgs"
                android:singleLine="true"
                android:hint="@string/name_s"
                android:inputType="textCapSentences"
                android:imeOptions="actionNext"
                android:padding="15dp"
                android:textColor="@color/input_box_hint"
                android:textSize="@dimen/tab_medium_size" >
            </EditText>
            <EditText
                android:id="@+id/client_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="6dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/input_bgs"
                android:hint="@string/client_s"
                android:singleLine="true"
                android:inputType="textCapSentences"
                android:imeOptions="actionNext"
                android:padding="15dp"
                android:textColor="@color/input_box_hint"
                android:textSize="@dimen/tab_medium_size" >
            </EditText>
            <EditText
                android:id="@+id/email_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="6dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/input_bgs"
                android:hint="@string/email_s"
                  android:imeOptions="actionNext"
                android:padding="15dp"
                android:singleLine="true"
                android:textColor="@color/input_box_hint"
                android:textSize="@dimen/tab_medium_size" >
            </EditText>
           
<EditText
                android:id="@+id/day_phone_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/state_name_txt"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="6dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/input_bgs"
                android:hint="@string/day_phone"
                  android:imeOptions="actionNext"
                android:maxLength="10"
                android:singleLine="true"
                android:inputType="phone"
                 android:padding="15dp"
                android:textColor="@color/input_box_hint"
                android:textSize="@dimen/tab_medium_size" >
            </EditText>
         
            <EditText
                android:id="@+id/e_phone_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/state_name_txt"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="6dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/input_bgs"
                android:hint="@string/evening_Phone"
                android:phoneNumber="true"
                android:maxLength="10"
                  android:imeOptions="actionNext"
                android:inputType="phone"
                android:padding="15dp"
                android:singleLine="true"
                android:textColor="@color/input_box_hint"
                android:textSize="@dimen/tab_medium_size" >
            </EditText>
            <EditText
                android:id="@+id/event_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="6dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/input_bgs"
                android:hint="@string/wht_evn"
                android:inputType="textCapSentences"
                  android:imeOptions="actionNext"
                android:padding="15dp"
                android:singleLine="true"
                android:textColor="@color/input_box_hint"
                android:textSize="@dimen/tab_medium_size" >
            </EditText>
           
            <TextView
                android:id="@+id/txt_ticket"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/cit_txt"
                android:layout_gravity="center_vertical|center_horizontal"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="6dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/input_bgs"
                android:gravity="center_vertical"
                android:hint="@string/many_tickets"
                  android:imeOptions="actionNext"
                android:inputType="textCapSentences"
                android:padding="15dp"
                android:drawableRight="@drawable/downs_arrow"
                android:singleLine="true"
                android:textColor="@color/input_box_hint"
                android:textSize="@dimen/tab_medium_size"
                android:visibility="visible" />
            
            <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="horizontal"
           
             android:padding="10dp"
             >
                <TextView
                android:id="@+id/date_of_event_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/cit_txt"
                android:layout_gravity="center_vertical|center_horizontal"
              android:layout_marginRight="21dp"
                android:gravity="center_vertical"
                android:hint="@string/date_of_event"
                  android:imeOptions="actionNext"
                android:inputType="textCapSentences"
                android:maxLines="1"
                android:padding="12dp"
                android:textColor="@color/input_box_hint"
                android:textSize="@dimen/tab_medium_size"
                android:visibility="visible" />
                <TextView
                android:id="@+id/date_of_event_txt1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/cit_txt"
                android:layout_gravity="center_vertical|center_horizontal"
               
                android:background="@drawable/input_bgs"
                android:gravity="center_vertical"
                android:text="12/08/2015"
                  android:imeOptions="actionNext"
                android:inputType="textCapSentences"
                android:maxLines="1"
                android:padding="10dp"
                android:textColor="@color/input_box_hint"
                android:textSize="@dimen/tab_medium_size"
                android:visibility="visible" />
            </LinearLayout>
            
            <EditText
                android:id="@+id/event_city_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="6dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/input_bgs"
                android:hint="@string/event_city"
                android:inputType="textCapSentences"
                  android:imeOptions="actionNext"
                  android:singleLine="true"
                android:padding="15dp"
                android:textColor="@color/input_box_hint"
                android:textSize="@dimen/tab_medium_size" >
            </EditText>
            
            <TextView
                android:id="@+id/event_state"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/cit_txt"
                android:layout_gravity="center_vertical|center_horizontal"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="6dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/input_bgs"
                android:gravity="center_vertical"
                android:hint="@string/event_state"
                  android:imeOptions="actionNext"
                android:inputType="textCapSentences"
                android:singleLine="true"
                android:drawableRight="@drawable/downs_arrow"
                android:padding="15dp"
                android:textColor="@color/input_box_hint"
                android:textSize="@dimen/tab_medium_size"
                android:visibility="visible" />
            <EditText
                android:id="@+id/preferred_seating_txt"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_below="@+id/day_phone_txt"
                android:layout_marginBottom="23dp"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="6dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/input_bgs"
                android:gravity="top"
                  android:imeOptions="actionDone"
                android:hint="@string/any_preferred_seating"
                android:inputType="textCapSentences"
                android:maxLines="3"
                android:visibility="visible"
                android:padding="15dp"
                android:paddingTop="10dp"
                android:textColor="@color/input_box_hint"
                android:textSize="@dimen/tab_medium_size" >
            </EditText>

            <Button
                android:id="@+id/request_ticket_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/editPassword"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/green_border"
                android:padding="25dp"
                android:text="@string/req_ticket"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="@dimen/tab_medium_size"
                android:textStyle="bold" />

        </LinearLayout>
    </ScrollView>

</RelativeLayout>
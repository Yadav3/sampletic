<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/llay_top"
    android:background="@color/back_ground"
    android:orientation="vertical"
    android:weightSum="2" xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
          android:id="@+id/lllay_top1"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="185dp"
            android:layout_height="195dp"
            android:layout_gravity="center"
             android:id="@+id/lllay_top2"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/rect_grey"
            android:orientation="vertical" >

          <!--   <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp" > -->

                <ImageView
                    android:id="@+id/web_image"
                    android:layout_width="140dp"
                    android:layout_marginTop="10dp"
                    android:layout_height="140dp"
                    android:background="@color/back_ground"
                    android:src="@drawable/login_logo"
                       android:layout_gravity="center_horizontal"
                    android:contentDescription="@string/app_name" />
           <!--  </FrameLayout> -->

            <TextView
                android:id="@+id/txt_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:ellipsize="end"
                android:gravity="bottom|center_vertical|center_horizontal"
                android:maxLines="2"
                android:text="Australia Vs UAE"
                android:layout_marginLeft="3dp"
                 android:layout_marginRight="3dp"
                 android:paddingTop="3dp"
                 android:paddingBottom="3dp"
                android:textColor="#696969"
                android:textSize="@dimen/tab_small_size"
                android:visibility="visible" />
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/bott_rrr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:visibility="visible" >

        <TextView
            android:id="@+id/txt_title1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|center_horizontal"
            android:gravity="bottom"
            android:lineSpacingExtra="3dp"
            android:paddingRight="3dp"
            android:paddingTop="3dp"
            android:text=""
            android:textColor="#d87822"
           android:textSize="@dimen/tab_very_small_size"
            android:visibility="visible" />

        <TextView
            android:id="@+id/txt_title2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|center_horizontal"
            android:layout_marginLeft="25dp"
            android:layout_toRightOf="@+id/txt_title1"
            android:gravity="bottom"
            android:lineSpacingExtra="3dp"
            android:paddingRight="3dp"
            android:paddingTop="3dp"
            android:text=" "
            android:textColor="#878787"
            android:textSize="@dimen/tab_very_small_size"
            android:visibility="visible" />

    </RelativeLayout>

</LinearLayout>
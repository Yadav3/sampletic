<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/llayoutSort"
     android:layout_width="150dp"
    android:layout_height="wrap_content"
    android:layout_alignParentRight="true"
     android:layout_margin="5dp"
      android:background="@color/bottom_border"
    android:visibility="visible" >

    <LinearLayout
        android:id="@+id/idlayout"
         android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp" >
<RelativeLayout
            android:id="@+id/tvAlbha"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
           
            android:gravity="center_vertical"
            android:visibility="visible" >

            <TextView
                android:id="@+id/tv_hom1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:drawablePadding="10dp"
                android:padding="15dp"
                android:singleLine="true"
                android:text="@string/home"
                android:textColor="@color/white"
                android:textSize="@dimen/medium_size"
                 />
        </RelativeLayout>
<View
            android:id="@+id/view_id11"
            android:layout_width="fill_parent"
            android:layout_height="0.2dp"
            android:background="@color/white" />
        <RelativeLayout
            android:id="@+id/tvAlbha"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
           
            android:gravity="center_vertical"
            android:visibility="visible" >

            <TextView
                android:id="@+id/tv_menu1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:drawablePadding="10dp"
                android:padding="15dp"
                android:singleLine="true"
                android:text="@string/Dash_borad"
                android:textColor="@color/white"
                android:textSize="@dimen/medium_size"
                 />
        </RelativeLayout>

        <View
            android:id="@+id/view_id1"
            android:layout_width="fill_parent"
            android:layout_height="0.2dp"
            android:background="@color/white" />

        <RelativeLayout
            android:id="@+id/tvRating"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical" >

            <TextView
                android:id="@+id/tv_menu2"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:drawablePadding="10dp"
                android:padding="15dp"
                android:singleLine="true"
                android:text="Logout"
                android:textColor="@color/white"
                android:textSize="@dimen/medium_size"
                />
        </RelativeLayout>

     
    </LinearLayout>

</RelativeLayout>
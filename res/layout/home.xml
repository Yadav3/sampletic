<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ray_lay"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/back_ground"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/lay"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <include layout="@layout/header" />
    </LinearLayout>

    <ScrollView
        android:id="@+id/scr_lay"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/lay"
        android:layout_above="@+id/hor" >

        <LinearLayout
            android:id="@+id/linear"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="center_horizontal"
            android:paddingBottom="30dp"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/img_user"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/textView1"
                android:layout_marginTop="10dp"
                android:src="@drawable/ic_launcher"
                android:visibility="gone" />
<LinearLayout
            android:id="@+id/linear_user"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="center_horizontal"
            android:orientation="horizontal" >
            <TextView
                android:id="@+id/txt_wel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Welcome,"
                android:textSize="@dimen/large_size"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txt_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="25dp"
                android:layout_marginLeft="6dp"
                android:text=""
                android:textColor="#195ca3"
                android:textSize="@dimen/large_size"
                android:textStyle="bold" />
            </LinearLayout>
            <TextView
                android:id="@+id/txt_hom_msg"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="6dp"
                android:text=""
                android:lineSpacingExtra="6dp"
               android:textColor="#696969"
                android:textSize="@dimen/medium_size"
                 />

            <TextView
                android:id="@+id/txt_start_shoping"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/lay"
                android:layout_centerVertical="true"
                android:layout_marginBottom="6dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/home_rect_orange"
                android:drawableRight="@drawable/whit_right_arrow"
                android:gravity="center"
                android:padding="10dp"
                android:text="@string/start_shping"
                android:textColor="@color/white"
                android:textSize="@dimen/button_height1" />

            <TextView
                android:id="@+id/txt_my_accounts"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/lay"
                android:layout_centerVertical="true"
                android:layout_marginBottom="6dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/home_rect_orange"
                android:drawableRight="@drawable/whit_right_arrow"
                android:gravity="center"
                android:padding="10dp"
                android:text="@string/my_acuts"
                android:textColor="@color/white"
                android:textSize="@dimen/button_height1" />

            <TextView
                android:id="@+id/txt_logout"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/lay"
                android:layout_centerVertical="true"
                android:layout_marginBottom="6dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/home_rect_grey"
                android:drawableRight="@drawable/button_arrow"
                android:padding="10dp"
                android:text="Logout"
                android:textColor="#195ca3"
                android:textSize="@dimen/button_height1"
                android:visibility="gone" />
        </LinearLayout>
    </ScrollView>
<RelativeLayout
                android:id="@+id/hor"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@color/blue"
                android:orientation="horizontal"
                android:layout_alignParentBottom="true"
                android:padding="5dp"
                android:weightSum="3" >

                <LinearLayout
                    android:id="@+id/l1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="6dp"
                    android:layout_weight="1"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/txt_ptvalue"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:text="158"
                        android:textColor="@color/home_lables"
                        android:textSize="@dimen/large_size"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/txt_pt"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="1dp"
                        android:gravity="center_horizontal"
                        android:text="@string/points_in_cart"
                        android:textColor="#ffffff"
                        android:textSize="@dimen/small_size" />
                </LinearLayout>
<TextView
            android:id="@+id/textView3"
            android:layout_width="1dp"
            android:layout_height="33dp"
            android:layout_centerHorizontal="true"
             android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:visibility="visible"
            android:background="@color/white"
            android:text="" />
                <LinearLayout
                    android:id="@+id/l2"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:visibility="gone" >

                    <TextView
                        android:id="@+id/txt_itemsvalue"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:text="152841.4"
                        android:textColor="#ffeb00"
                        android:textSize="@dimen/button_height" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:orientation="horizontal" >

                        <TextView
                            android:id="@+id/txt_items"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="3dp"
                            android:gravity="center_horizontal"
                            android:text="ITEMS IN CART"
                            android:textColor="#ffffff"
                            android:textSize="@dimen/small_size" />

                        <TextView
                            android:id="@+id/txt_itemsnum"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:layout_marginTop="3dp"
                            android:background="@drawable/circle_white"
                            android:gravity="center"
                            android:text="2"
                            android:textColor="#000000"
                            android:textSize="@dimen/small_size" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/l3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="6dp"
                    android:layout_weight="1"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/txt_ptleftval"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:text="152841.4"
                        android:textColor="@color/home_lables"
                        android:textSize="@dimen/large_size"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/txt_ptleft"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="1dp"
                        android:gravity="center_horizontal"
                        android:text="@string/points_left"
                        android:textColor="#ffffff"
                        android:textSize="@dimen/small_size" />
                </LinearLayout>
            </RelativeLayout>
    <LinearLayout
        android:id="@+id/menlayout_hom"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="55dp"
        android:orientation="vertical"
        android:visibility="gone" >
    </LinearLayout>

</RelativeLayout>
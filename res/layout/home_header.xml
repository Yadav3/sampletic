<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/top_lay"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/back_ground" >

    <ImageView
        android:id="@+id/btn_home"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_toLeftOf="@+id/favLayout"
        android:drawablePadding="10dp"
        android:gravity="left|center_vertical"
        android:minHeight="0dip"
        android:minWidth="0dip"
        android:paddingLeft="10dp"
        android:layout_marginTop="3dp"
        android:src="@drawable/login_logo"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:textSize="@dimen/button_height1" />

    <RelativeLayout
        android:id="@+id/favLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_gravity="center"
        android:layout_toLeftOf="@+id/cartLayout"
        android:paddingLeft="7dp"
        android:paddingRight="7dp" >

        <ImageView
            android:id="@+id/textOrders"
            android:layout_width="25dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:gravity="center"
            android:src="@drawable/my_favorites" />

        <TextView
            android:id="@+id/txt_wish_cnt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="-8dp"
            android:layout_toRightOf="@+id/textOrders"
            android:background="@drawable/red_circle_tab"
            android:gravity="center"
            android:padding="1dp"
            android:text="0"
            android:textColor="#ffffff"
            android:textSize="12dp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/cartLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_gravity="center"
        android:layout_toLeftOf="@+id/menu"
        android:paddingLeft="7dp"
        android:paddingRight="7dp" >

        <ImageView
            android:id="@+id/textOrders"
            android:layout_width="25dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:gravity="center"
            android:src="@drawable/my_cart" />

        <TextView
            android:id="@+id/txt_crt_cnt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="-8dp"
            android:layout_toRightOf="@+id/textOrders"
            android:background="@drawable/red_circle_tab"
            android:gravity="center"
            android:padding="1dp"
            android:text="0"
            android:textColor="#ffffff"
            android:textSize="12dp" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_gravity="center"
        android:layout_marginRight="6dp"
        android:gravity="center"
        android:padding="10dp"
        android:src="@drawable/menus" />

    <View
        android:id="@+id/lin"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/btn_home"
        android:layout_marginTop="5dp"
        android:background="@color/line" />

</RelativeLayout>
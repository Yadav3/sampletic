<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ray_header"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/back_ground" >
    <RelativeLayout 
         android:layout_width="wrap_content"
         android:id="@+id/abc"
    android:layout_height="wrap_content"
    
    > 
        <Button
        android:id="@+id/btn_home"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:layout_centerVertical="true"
        android:layout_gravity="center"
        android:layout_marginLeft="3dp"
        android:layout_toRightOf="@+id/menu"
        android:background="@null"
        android:drawableLeft="@drawable/down_arrow"
        android:drawablePadding="5dp"
        android:minHeight="0dip"
        android:minWidth="0dip"
        android:text="@string/my_account"
        android:textAllCaps="false"
        android:textColor="@color/headers_txt_title"
        android:textSize="@dimen/button_height1" />
<ImageView
        android:id="@+id/menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_gravity="center"
        android:padding="15dp"
        android:src="@drawable/menus" />
<Button
        android:id="@+id/menus"
        android:layout_width="45dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@android:color/transparent"
        android:padding="10dp" />

    </RelativeLayout>

    
    <View
        android:id="@+id/lin"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/abc"
        android:background="@color/line" />

    <RelativeLayout
        android:id="@+id/favLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_gravity="center"
        android:layout_toLeftOf="@+id/cartLayout"
        android:paddingLeft="7dp"
        android:paddingRight="7dp" >

        <ImageView
            android:id="@+id/textOrders"
            android:layout_width="33dp"
            android:layout_height="36dp"
            android:src="@drawable/my_favorites" />

        <TextView
            android:id="@+id/txt_wish_cnt1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="-12dp"
            android:layout_toRightOf="@+id/textOrders"
            android:background="@drawable/red_circle"
            android:gravity="center"
            android:padding="1dp"
            android:text="0"
            android:textColor="#ffffff"
            android:textSize="12dp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/cartLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_gravity="center"
        android:layout_alignParentRight="true"
        android:paddingLeft="7dp"
        android:paddingRight="7dp"
        >

        <ImageView
            android:id="@+id/textOrders1"
            android:layout_width="36dp"
            android:layout_height="33dp"
             android:layout_marginTop="7dp"
            android:src="@drawable/my_crt_new" />

        <TextView
            android:id="@+id/txt_crt_cnt1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="-12dp"
            android:layout_toRightOf="@+id/textOrders1"
            android:background="@drawable/red_circle"
            android:gravity="center"
            android:padding="1dp"
             android:layout_marginTop="3dp"
            android:text="0"
            android:textColor="#ffffff"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/search_icon"
            android:layout_width="21dp"
            android:layout_height="21dp"
            android:layout_marginLeft="16dp"
            android:layout_toRightOf="@+id/txt_crt_cnt1"
        android:layout_gravity="center"
         android:layout_marginTop="12dp"
            android:background="@drawable/icon_search"
            android:visibility="gone"
            android:textSize="12dp" />

        <Button
            android:id="@+id/search_icn_btn"
            android:layout_width="41dp"
            android:layout_marginLeft="5dp"
            android:visibility="gone"
             android:layout_toRightOf="@+id/txt_crt_cnt1"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent" />
    </RelativeLayout>

    

 <RelativeLayout 
    android:layout_width="fill_parent"
    android:id="@+id/logo_rrr"
    android:layout_height="wrap_content"
    android:visibility="visible"
    android:background="@color/back_ground" >

<ImageView
    android:id="@+id/imageView1"
    android:layout_width="wrap_content"
    android:layout_height="50dp"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    android:layout_centerHorizontal="true"
    android:visibility="visible" />

</RelativeLayout>
<LinearLayout 
     android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:paddingLeft="10dp"
         android:paddingRight="10dp"
          android:id="@+id/lll_show_logo"
            android:layout_marginTop="-1dp"
         android:visibility="invisible"
        android:layout_centerHorizontal="true"
    >
    <TextView
        android:id="@+id/txt_show_logo"
        android:layout_width="20dp"
        android:layout_height="15dp"
        android:background="@drawable/down_black"
        android:visibility="visible" />
</LinearLayout>
</RelativeLayout>